<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dialog.FilterDialogFragment"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_hero"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/primary_attribute"
            android:layout_marginBottom="10dp"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/hero_title_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hero_title"/>
        <CheckBox
            android:id="@+id/hero_title_ascending_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:checked="true"
            android:text="@string/a_z"
            />
        <CheckBox
            android:id="@+id/hero_title_descending_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:text="@string/z_a"
           />

        <CheckBox
            android:id="@+id/pro_win_rate_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pro_win_rate"/>

        <CheckBox
            android:id="@+id/hero_win_ascending_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:checked="true"
            android:text="@string/_100_0"
            />
        <CheckBox
            android:id="@+id/hero_win_descending_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:text="@string/_0_100"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
        <CheckBox
            android:id="@+id/strength_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/strength" />
        <CheckBox
            android:id="@+id/agility_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/agility" />

        <CheckBox
            android:id="@+id/intelligence_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/intelligence" />

        <CheckBox
            android:id="@+id/none_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/none" />

        <ImageButton
            android:id="@+id/check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/bar_color"
            android:src="@drawable/check_icon" />

    </LinearLayout>


</FrameLayout>